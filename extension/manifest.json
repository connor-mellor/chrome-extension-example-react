{
    "manifest_version": 3,
    "name": "My Chrome Extension",
    "version": "1.0.0",
    "description": "This is a simple Chrome extension.",
    "action": {
        "default_popup": "index.html",
        "default_title": "My Extension"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://*/*"],
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["assets/popup.js"]
        }
    ]
}